
@{
    ViewBag.Title = "CRUDRoles";
}

<div class="col-md-12 padding-top-25">
    <h4>Administrera roller</h4>
    <div class="col-sm-6 col-lg-6 col-md-6">
        <div class="panel panel-roles" style="border: 1px solid #C5C5C5 !important;">
            <div class="panel-heading-roles" style="padding-left: 20px !important">
                <h4>Roller i Astrid</h4>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover col-sm-6 col-lg-6 col-md-6" style="border: 1px solid #C5C5C5 !important;">
                    @foreach (var role in ViewBag.AstridRoles)
                    {
                        <tr>
                            <td class="col-sm-1 col-lg-4 col-md-4">
                                <strong>@role.Text </strong>
                            </td>
                            <td class="col-sm-1 col-lg-2 col-md-2">
                                @*<span onclick="return confirm('Vill du verkligen ta bort rollen?')"><a href="/Admin/DeleteRole?RoleName=@role.Text" class="delLink" style="color: red;">Ta bort</a></span>*@
                                <span onclick="return confirm('Vill du verkligen ta bort rollen?')">
                                    <a href="/Admin/DeleteAstridRole?RoleName=@role.Text">
                                        <button class="btn btn-default">
                                            <span>Ta bort</span>
                                        </button>
                                    </a>
                                </span>
                                @*@Html.ActionLink("Ändra", "EditRole", new {roleName = @role.Text})*@
                                @Html.ActionLink(HttpUtility.HtmlDecode("Ändra"), "EditAstridRole", "Admin", new { roleName = @role.Text }, new { @class = "btn btn-default" })
                            </td>
                        </tr>
                    }
                </table>
            </div> <!-- End Panel Body-->
        </div> <!-- End Panel -->

        <div class="panel panel-roles" style="border: 1px solid #C5C5C5 !important;">
            <div class="panel-heading-roles" style="padding-left: 20px !important">
                <h4>Skapa ny roll i Astrid</h4>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("CreateAstridRole", "Admin", new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div>
                        <div class="form-group">
                            @Html.Label("Rollnamn", new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.TextBox("RoleName", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <input type="submit" value="Spara" class="btn btn-default" style="margin-right: 15px; margin-left: 20px;" />
                    </div>
                }

            </div> <!--End Panel Body-->
        </div> <!--End Panel-->
    </div> <!--End First Column-->


    <div class="col-sm-6 col-lg-6 col-md-6">
