@model InrappSos.AstridWeb.Models.ViewModels.FileDropViewModel

<script src="@Url.Content("~/Scripts/fileDrop.js")" type="text/javascript"></script>


@{
    ViewBag.Title = "Ladda upp dokument";
}

@section Scripts {
    <!-- blueimp File Upload & Gallery styles -->
    @Styles.Render("~/Content/jQuery-File-Upload")
}

<script>
    $(function () {
        $("#txtTyp").focus();
    });

    var $form = null;
    $(function () {

        $form = $('#fileupload').fileupload({
            dataType: 'json'
        });

    });
    $('#fileupload').addClass('fileupload-processing');

</script>


@using (Html.BeginForm("AddTemplateDocument", "FileUpload", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal padding-top-55">
        <h4>Ladda upp mall</h4>
        <hr />
        <p>Välj filer att ladda upp</p>

        @Html.Partial("_Files")
    </div>

    <div>
        @Html.ActionLink("Tillbaka", "GetTemplateDocuments", "FileUpload")
    </div>
}

@Scripts.Render("~/bundles/jQuery-File-Upload")
