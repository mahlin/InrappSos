                                    grid.Column("Ärendestatus", format: @item => Html.DropDownListFor(m => m.SelectedArendestatusId, ViewBag.ArendestatusDDL as SelectList, " - Välj -", new { id = "ddlArendestatus", @class = "form-control edit-mode", style = "min-width:110px !important" })),
