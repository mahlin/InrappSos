                                    grid.Column("Rapportorer", "Ej registrerade kontaktpersoner", format: @<text><span class="display-mode col2Width"><label id="lblRapportorer" style="width: 200px;">@item.Rapportorer</label></span></text>, style: "col2Width"),
                                    grid.Column("StartDatum", "Startdatum", format: @<text><span class="display-mode"><label id="lblStartDatum">@( item.StartDatum != null ? item.StartDatum.ToString("yyyy-MM-dd") : item.StartDatum)</label></span></text>, style: "col1Width"),
                                    grid.Column("SlutDatum", "Slutdatum", format: @<text><span class="display-mode"><label id="lblSlutDatum">@( item.SlutDatum != null ? item.SlutDatum.ToString("yyyy-MM-dd") : item.SlutDatum)</label></span></text>, style: "col1Width")
                                    ))
                        </div>
                    }
                    else
                    {
                        <br />
                        <br />
                        <div style="font-size: 1.2em; padding-left: 20px;">Inga ärenden hittades för vald organisation</div>
                    }
                }
            }
        }
    }

