                            @{
                                ViewBag.Title = "Administrera ärenden";
                                var grid = new WebGrid(source: Model.Arenden, canPage: false, rowsPerPage: 10, ajaxUpdateContainerId: "casesGrid");
                            }

                            @grid.GetHtml(htmlAttributes: new {id = "caseTable"},
