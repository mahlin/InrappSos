    $(function () {
        $('.edit-mode').hide();
        $('.edit-user, .cancel-user').on('click', function () {
            var tr = $(this).parents('tr:first');
            tr.find('.edit-mode, .display-mode').toggle();
        });
        $('.save-user').on('click', function () {
            var tr = $(this).parents('tr:first');
            var id = tr.find("#Id").val();
            var orgId = tr.find("#OrganisationId").val();
            var privEpostDoman = tr.find("#PrivatEpostDoman").val();
            var orgNamn = tr.find("#Organisationsnamn").val();
            var arendeNr = tr.find("#ArendeNr").val();
            var aktivFrom = tr.find("#AktivFrom").val();
            var aktivTom = tr.find("#AktivTom").val();

            //Creating UndantagEpostDoman JSON object
            var undantagEpostDoman =
                {
                    "Id": id,
                    "OrganisationId": orgId,
                    "Organisationsnamn": orgNamn,
                    "ArendeNr": arendeNr,
                    "PrivatEpostDoman": privEpostDoman,
                    "AktivFrom": aktivFrom,
                    "AktivTom": aktivTom
                };
            //Posting ApplicationUser object to controller's Update action method
            $.ajax({
                url: '/Organisation/UpdatePrivateEmailDomain',
                data: JSON.stringify(undantagEpostDoman),
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    //location.reload();
                    $("#pageContainer").html(data);
                    tr.find('.edit-mode, .display-mode').toggle();
                    $('#footer').hide();
                    //alert('Record updated Successfully!!');
                }
            });

        });

        $('.edit-user').on('click', function () {
            var tr = $(this).parents('tr:first');
            var contactPhoneNumber = tr.find("#ContactPhoneNumber").val();
            var contactNumber = tr.find("#ContactNumber").val();
            var contactAktivFrom = tr.find("#ContactAktivFrom").val();
            var contactAktivTom = tr.find("#ContactAktivTom").val();

            tr.find("#lblPhoneNumber").text(contactPhoneNumber);
            tr.find("#lblContactNumber").text(contactNumber);
            tr.find("#lblAktivFrom").text(contactAktivFrom);
            tr.find("#lblAktivTom").text(contactAktivTom);
        });
    });
</script>
