@model InrappSos.FilipWeb.Models.RegisterPhoneNumberViewModel
@{
    ViewBag.Title = "E-postadress bekräftad";
}

@Html.Hidden(Model.Id)

<div class="row padding-top-55">
    <h4>@Html.Raw(ViewBag.Title)</h4>
    <p>
        Tack för att du bekräftat din e-postadress.<br />
        För att registreringen ska bli komplett behöver du lägga till ett mobilnummer dit vi skickar verifieringskoden vid inloggning.
    </p>
    <br />
        @using (Html.BeginForm("AreYouSurePhoneNumber", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(m => m.Id)
            @Html.AntiForgeryToken()
            <h4>Lägg till ett mobilnummer</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Number, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control", id = "txtNumber", placeholder = "07NNNNNNNN" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Spara" />
                </div>
            </div>
        }
        
        

        @*@Html.ActionLink("Klicka här för att registrera ett mobilnummer.", "AddPhoneNumber", "Account", routeValues: new { id = Model.Id }, htmlAttributes: null)*@


</div>
