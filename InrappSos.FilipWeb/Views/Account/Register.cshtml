            @Html.LabelFor(m => m.Telefonnummer, new { @class = "col-md-2 control-label" })
        </div>
        <div class="col-md-8" style="width: 320px !important;padding-bottom: 15px;"> 
            <div> @Html.TextBoxFor(m => m.Telefonnummer, new { @class = "form-control" })</div>
        </div>
        <div class="" style="margin-top: 3px;">
            &nbsp;&nbsp;Ange det telefonnummer vi kan kontakta dig på.
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", maxlength = 60 })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { maxlength = 4, placeholder = "4 siffror", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { maxlength = 4, @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Spara" />
        </div>
    </div>
